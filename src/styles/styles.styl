global-reset()

$blue-dark = #2f3440
$blue      = #3f5666
$white     = #fffbf0
$orange    = #e96044
$beige     = #f7d9b3

html
  font-size 62.5%

  @media screen and (min-width:768px)
    font-size 100%

/* TYPE*/
body
  font 1.8rem/1.5 "Potano Sans", "Helvetica", "Arial", sans-serif

h1
  font-family 'Stint Ultra Expanded'
  font-size   3.2rem
  padding     1.6rem

.error
  color     $orange
  font-size 1.2rem

/* LAYOUT */
.top-bar
  background $blue-dark
  height     4rem

.wrap
  margin     0 auto
  max-width  96rem
  text-align center

/* BUTTON */
.btn
  -webkit-appearance     none
  -webkit-font-smoothing antialiased
  background             $orange
  border                 solid 2px darken($orange, 40%)
  border-radius          0
  box-sizing             border-box
  color                  $white
  cursor                 pointer
  display                inline-block
  font-size              2.4rem
  padding                0 0.8rem 0.2rem
  text-align             center
  transition             background 0.2s ease-in-out
  user-select            none

  &:focus
    outline none

  &:hover
    background darken($orange, 20%)

  &:active
    background darken($orange, 10%)

.btn-group
  padding 1.6rem 0

/* FORM*/
.form-group
  margin-bottom 0.8rem

input
  -webkit-appearance none
  background         #fff
  border             2px solid $blue
  box-shadow         none
  display            inline-block
  font-size          1.6rem
  padding            0.8rem
  position           relative
  transition         background-color 0.2s ease-in

  &:focus
    background   $beige
    border-color $blue-dark
    outline      none
